<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button" x:Key="CancelButton">
        <Setter Property="BorderBrush" Value="MediumVioletRed"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="MediumVioletRed"/>
    </Style>

    <Style TargetType="Button" x:Key="DefaultButton">
        <Setter Property="BorderBrush" Value="MediumSlateBlue"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="MediumSlateBlue"/>
    </Style>

    <Style TargetType="Button" x:Key="OkButton">
        <Setter Property="BorderBrush" Value="MediumSeaGreen"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="MediumSeaGreen"/>
    </Style>
    
</ResourceDictionary>